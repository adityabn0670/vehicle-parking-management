<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vehicle Transactions - SmartPark</title>
    <style>
        body {
            font-family: 'Roboto', Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #6a11cb, #2575fc); /* Gradient background */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: white;
        }

        .container {
            width: 80%;
            max-width: 1200px; /* Increase max-width for larger screens */
            margin: auto;
            background: #ffffff;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            text-align: center;
            overflow-x: auto; /* Enable horizontal scrolling on smaller screens */
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
            font-size: 2rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0 auto;
            background-color: #fff; /* Set background color for the table */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden; /* Hide any overflow content */
        }

        table thead {
            background-color: #4285f4;
            color: white;
        }

        table th, table td {
            padding: 12px;
            text-align: center;
            color: black;
            border-bottom: 1px solid #ddd;
        }

        table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tbody tr:hover {
            background-color: #e9e9e9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Vehicle Transactions</h1>
        <div style="overflow-x:auto;"> <!-- Add a wrapper for the table to handle overflow -->
            <table>
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>User Name</th>
                        <th>Registration No</th>
                        <th>Model</th>
                        <th>Color</th>
                        <th>Category</th>
                        <th>Parking Slot</th>
                        <!-- <th>Vehicle In Time</th> -->
                        <th>Transaction ID</th>
                        <th>Amount</th>
                        <th>Transaction In Time</th>
                        <th>Transaction Out Time</th>
                         <!-- Add this column -->
                    </tr>
                </thead>
                <tbody>
                    <% transactions.forEach(transaction => { %>
                        <tr>
                            <td><%= transaction.user_id %></td>
                            <td><%= transaction.user_name %></td>
                            <td><%= transaction.reg_no %></td>
                            <td><%= transaction.model %></td>
                            <td><%= transaction.color %></td>
                            <td><%= transaction.category %></td>
                            <td><%= transaction.SlotNo %></td> 
                            <!-- <td><%= transaction.veh_intime %></td> -->
                            <td><%= transaction.trans_id %></td>
                            <td><%= transaction.amount %></td>
                            <td><%= transaction.veh_intime %></td>
                            <td><%= transaction.outtime %></td>
                            <!-- Display SlotNo -->
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            
        </div>
    </div>
</body>
</html>
